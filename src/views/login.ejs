<%- include('includes/head.ejs') %>

<main class="auth-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card auth-card">
                    <div class="card-body p-4 p-md-5">
                        <div class="text-center mb-4">
                            <i class="fas fa-user-circle feature-icon"></i>
                            <h2>Bem-vindo de volta!</h2>
                            <p class="text-muted">Entre para continuar organizando seus eventos</p>
                            <% if (typeof error !== 'undefined') { %>
                                <div class="alert alert-danger" role="alert">
                                    <%= error %>
                                </div>
                            <% } %>
                        </div>

                        <form action="/login" method="POST">
                            <div class="mb-3">
                                <label for="login" class="form-label">Email ou Nome de Usuário</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-user"></i>
                                    </span>
                                    <input type="text" class="form-control" id="login" name="login" value="<%= typeof loginValue !== 'undefined' ? loginValue : '' %>" required>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label for="password" class="form-label">Senha</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                    <input type="password" class="form-control" id="password" name="password" required>
                                </div>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-accent btn-lg">Entrar</button>
                            </div>
                        </form>

                        <div class="text-center mt-4">
                            <p class="mb-0">Ainda não tem uma conta? 
                                <a href="/register" class="text-decoration-none">Criar conta</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('includes/footer.ejs') %>
